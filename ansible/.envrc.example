# inventory.yaml

# Server IP and user with ssh access
export ANSIBLE_HOST=
export ANSIBLE_USER=root


# vars.yaml

# Domain name and email for Caddy
export DOMAIN_NAME=

# Show exceptions and tracebacks on errors
# 1: show
# 0: don't show
export DEBUG=1

# Set localhost on settings instead of domain name
# 1: set localhost
# 0: set production domain name
export LOCALDEV=0

# Used by Django to encrypt session login cookies
export SECRET_KEY=

# Use SQLite instead of PostgreSQL
# 1: use SQLITE
# 0 or any other value: use PostgreSQL (recommended for production)
export SQLITE=0

# PostgreSQL database password
export POSTGRES_PASSWORD=password

# PostgreSQL database connection string
# "password" must be the same as POSTGRES_PASSWORD above
export DATABASE_URL=postgres://pulsar:password@localhost:5432/pulsar
